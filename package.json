{
  "private": true,
  "name": "mjml-app",
  "version": "1.8.1",
  "description": "The only framework that makes responsive-email easy",
  "main": "main.js",
  "scripts": {
    "dev": "npm run hot-server & npm run start-hot & wait",
    "lint": "eslint src test *.js",
    "hot-server": "node server.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack/production.config.js --progress --profile --colors",
    "start": "cross-env NODE_ENV=production electron ./",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./",
    "package": "cross-env NODE_ENV=production node build.js",
    "package-all": "npm run package -- --all",
    "clean:osx": "rm -rf release *.dmg *.zip mjml-app/*",
    "build:osx": "npm run clean:osx && npm run package && appdmg build/osx.json ./mjml-app-osx.dmg -v"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "add-module-exports",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      },
      "test": {
        "plugins": [
          [
            "webpack-loaders",
            {
              "config": "webpack.config.node.js",
              "verbose": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "zavatta",
      "zavatta-react"
    ],
    "rules": {
      "camelcase": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    },
    "globals": {
      "Promise": false,
      "MJML_VERSION": false
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meriadec/mjml-desktop"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meriadec/mjml-desktop/issues"
  },
  "homepage": "https://github.com/meriadec/mjml-desktop",
  "devDependencies": {
    "ansi-to-html-umd": "^0.4.2",
    "asar": "^0.10.0",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-webpack-loaders": "^0.3.9",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "del": "^2.2.0",
    "electron-debug": "^0.5.2",
    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.37.2",
    "electron-rebuild": "^1.1.3",
    "eslint": "2.2.0",
    "eslint-config-zavatta": "^3.0.1",
    "eslint-config-zavatta-react": "^1.2.3",
    "eslint-plugin-react": "^4.2.2",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "jsdom": "^8.1.0",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "node-libs-browser": "^1.0.0",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.2",
    "precss": "^1.4.0",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.5",
    "redux-logger": "^2.6.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.10.0",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "dependencies": {
    "brace": "0.7.0",
    "classnames": "^2.2.3",
    "immutable": "^3.7.6",
    "lodash": "^4.6.1",
    "mjml": "^3.3.0",
    "mkdirp": "^0.5.1",
    "node-mailjet": "^1.1.0",
    "pure-render-decorator": "^1.1.0",
    "react": "^15.0.1",
    "react-ace": "3.4.1",
    "react-addons-css-transition-group": "^15.0.1",
    "react-copy-to-clipboard": "^4.2.3",
    "react-dom": "^15.0.1",
    "react-portal": "3.0.0",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.0",
    "react-scrollbar": "^0.4.1",
    "redial": "^0.4.1",
    "redux": "^3.3.1",
    "redux-actions": "^0.9.1",
    "redux-thunk": "^2.0.1",
    "request": "^2.69.0",
    "shortid": "^2.2.4",
    "superagent": "^1.8.3"
  },
  "optionalDependencies": {
    "appdmg": "^0.3.6"
  }
}
