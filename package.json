{
  "private": true,
  "name": "mjml-app",
  "productName": "MJML",
  "version": "2.1.0",
  "description": "The desktop app for MJML",
  "main": "app/main.js",
  "scripts": {
    "clean-build": "cross-env rimraf dist && rimraf app/dist && rimraf app/main.js && rimraf app/main.js.map",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js",
    "build-main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack/electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack/prod.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/main.development",
    "dev": "npm run hot-server -- --start-hot",
    "site": "webpack-dev-server --config webpack/site.babel.js --content-base site",
    "build:site": "webpack --config webpack/site.babel.js && cp -r site/assets dist",
    "package": "npm run build && build --publish never",
    "package-win": "npm run build && build --win --x64",
    "package-linux": "npm run build && build --linux",
    "package-all": "npm run build && build -mwl"
  },
  "browserslist": "electron 1.4",
  "build": {
    "directories": {
      "buildResources": "assets/resources",
      "output": "release"
    },
    "productName": "MJML",
    "appId": "org.develar.MJML",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.js",
      "main.js.map",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "zip"
      ]
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meriadec/mjml-app.git"
  },
  "author": {
    "name": "Meriadec Pillet",
    "email": "meriadec.pillet@gmail.com",
    "url": "https://github.com/meriadec"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meriadec/mjml-app/issues"
  },
  "keywords": [
    "mjml",
    "app"
  ],
  "homepage": "https://github.com/meriadec/mjml-app#readme",
  "devDependencies": {
    "asar": "^0.13.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.0.11",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "devtron": "^1.4.0",
    "electron": "^1.6.5",
    "electron-builder": "^17.1.1",
    "electron-devtools-installer": "^2.2.0",
    "eslint": "^3.19.0",
    "eslint-config-zavatta": "^4.3.0",
    "eslint-config-zavatta-react": "^2.1.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-react": "^6.10.3",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "jsdom": "^10.1.0",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.2",
    "react-addons-test-utils": "^15.5.1",
    "redux-logger": "^3.0.1",
    "sass-loader": "^6.0.3",
    "spectron": "^3.6.2",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "balloon-css": "^0.4.0",
    "classnames": "^2.2.5",
    "codemirror": "^5.25.2",
    "electron-debug": "^1.1.0",
    "electron-json-storage": "^3.0.5",
    "es6-promisify": "^5.0.0",
    "immutable": "^3.8.1",
    "mjml": "^3.3.2",
    "node-mailjet": "^3.0.6",
    "react": "^15.5.4",
    "react-collapse": "^4.0.2",
    "react-dom": "^15.5.4",
    "react-icons": "^2.2.3",
    "react-mortal": "^2.2.0",
    "react-redux": "^5.0.4",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "react-split-pane": "^0.1.63",
    "react-steack": "^1.3.0",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0",
    "source-map-support": "^0.4.15",
    "superagent-promise": "^1.1.0"
  }
}
